#include <bits/stdc++.h>
using namespace std;
int main() 
{
  int t;
  cin >> t;
  while(t--){
    int n;
    cin >> n;
    if(n == 2){
      cout << "1 1" << endl;
      cout << "1 2" << endl;
      cout << endl;
      continue;
    }
    if(n == 3){
      cout << "2 1" << endl;
      cout << "2 3" << endl;
      cout << "3 1" << endl << endl;
      continue;
    }
    cout << "1 1" << endl;
    cout << n << " " << n << endl;
    for(int i = 2; i < n-1; i++){
      cout << 1 << " " << i << endl;
    }
    cout << 2 << " " << n << endl;
    cout << endl;
  }
}
